@model IEnumerable<CarDealership.Models.Car>

    <div class="container p-3">
        <table class="table table-striped table-bordered " style="width:100%">
            <div class="form-row">
                <div class="col-9">
                    <h2 class="text-primary">Cars</h2>
                </div>
                <a asp-controller="Car" asp-action="AddCar" class="btn btn-success">Add new car</a>
                &nbsp;
                <a asp-controller="CarService" asp-action="AddService" class="btn btn-info">Add car to service</a>
            </div>
            <br />

            <thead class="badge-secondary">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Clients.FullName) 
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CarModel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Colour)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cars in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => cars.Clients.FullName)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => cars.CarName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => cars.CarModel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => cars.Colour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => cars.Year)
                        </td>

                        <td width="15%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Car" asp-action="Update" asp-route-carId="@cars.ID" class="btn btn-primary mx-1 ">Update</a>


                                <form asp-action="Delete" asp-route-carId="@cars.ID">
                                    <button type="submit" class="btn btn-danger mx-1 "> Delete</button>
                                </form>



                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>