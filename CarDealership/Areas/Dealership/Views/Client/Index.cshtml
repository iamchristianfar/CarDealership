@model List<Client>

@*@model Tuple<List<Client>, int>

@{ 
    var numberOfPages = Model.Item2;

}*@

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-10">
            <h2 class="text-primary">Clients</h2>
        </div>

        <a asp-controller="Client" asp-action="AddClients" class="btn btn-success">Add new client</a>

    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width:100%">


            <thead class="badge-secondary">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Representative 
                    </th>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Date Registered
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var clients in Model)
                {
                    <tr>
                        <td width="3%">@clients.ID</td>
                        <td width="5%">@clients.CompanyRepresentativeName</td>
                        <td width="17%">@clients.FullName</td>
                        <td width="18%">@clients.Email</td>
                        <td width="20%">@clients.Address</td>
                        <td width="16%">@clients.PhoneNumber</td>
                        <td width="30%">@clients.DateRegistered.ToString("dd MMM yyyy")</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Client" asp-action="Update" asp-route-clientId="@clients.ID" class="btn btn-primary mx-1 ">Update</a>
                               

                                <form asp-action="Delete" asp-route-clientId="@clients.ID">
                                    <button type="submit" class="btn btn-danger mx-1 "> Delete</button>
                                </form>
                            </div>
                        </td>

                    </tr>
                 }
            </tbody>
        </table>
    }

    
</div>