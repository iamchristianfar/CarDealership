@model CarDealership.Models.ViewModel.Dashboard


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"></h1>
            </div>

        </div>
    </div>
</div>

<div class="row">
   
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.NumberOfRepresentatives</h3>

                <p>Company Representatives</p>
            </div>
            <div class="icon">
                <i class="ion ion-ios-person"></i>
            </div>
            <a asp-controller="CompanyRepresentative" asp-action="AddCompanyRepresentative" class="small-box-footer">Add new representative <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.NumberOfClients</h3>

                <p>Clients</p>
            </div>
            <div class="icon">
                <i class="ion ion-ios-people"></i>
            </div>
            <a asp-controller="Client" asp-action="AddClients" class="small-box-footer">Add new client <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.NumberOfCars</h3>

                <p>Cars</p>
            </div>
            <div class="icon">
                <i class="ion ion-model-s"></i>
            </div>
            <a asp-controller="Car" asp-action="AddCar" class="small-box-footer">Add new car <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.NumberOfServices</h3>

                <p>Car Service</p>
            </div>
            <div class="icon">
                <i class="ion ion-settings"></i>
            </div>
            <a asp-controller="CarService" asp-action="AddService" class="small-box-footer">Add new service <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

<div class="row">
    <section class="col-lg-7 connectedSortable">
        <div class="card">
            <div class="card-header ui-sortable-handle" style="cursor: move;">
                <h3 class="card-title">
                    <i class="fas fa-chart-pie mr-1"></i>
                    Transactions
                </h3>
                
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content p-0">
                    <!-- Morris chart - Sales -->
                    <div class="chart tab-pane active" id="revenue-chart" style="position: relative; height: 300px;">
                        <div class="chartjs-size-monitor">
                             <div class="chartjs-size-monitor-expand">
                                 <div class="">

                            </div>
                        </div>
                        <div class="chartjs-size-monitor-shrink">
                            <div class="">
                                </div>
                            </div>
                        </div>
                        <canvas id="revenue-chart-canvas" height="375" style="height: 300px; display: block; width: 95px;" width="118" class="chartjs-render-monitor"></canvas>
                    </div>
                    <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 300px;">
                        <canvas id="sales-chart-canvas" height="0" style="height: 0px; display: block; width: 0px;" width="0" class="chartjs-render-monitor"></canvas>
                    </div>
                </div>
            </div><!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- /.card -->
    </section>

   
</div>

@section Scripts{
    <script>
    var salesChartData = {
        //labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
        labels: [
            @foreach(var month in Model.Months)
            {
                <text>
                    '@month',
                </text>
            }
        ],
        datasets: [
            {
            label: 'Transactions',
                backgroundColor: 'rgba(60,141,188,0.9)',
                borderColor: 'rgba(60,141,188,0.8)',
                pointRadius: false,
                pointColor: '#3b8bba',
                pointStrokeColor: 'rgba(60,141,188,1)',
                pointHighlightFill: '#fff',
                pointHighlightStroke: 'rgba(60,141,188,1)',
                //data: [28, 48, 40, 19, 86, 27, 90]
                data: [
                    @foreach(var transactionNumber in Model.NumberOfTransactions)
                    {
                        <text>
                            @transactionNumber,
                        </text>
                    }
                ]
            }

        ]
    }
    </script>


    
  }