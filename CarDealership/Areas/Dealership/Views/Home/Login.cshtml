@model CarDealership.Models.ViewModels.Login

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

</head>
<body>
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('https://www.freshnessmag.com/.image/c_limit%2Ccs_srgb%2Cq_auto:good%2Cw_984/MTM3NDYzNjM0NTA5MzA5MzU4/petrolified-iconic-cars-art-prints-3.webp');"></div>
        <div class="contents order-2 order-md-1">
           
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Login to <strong>Car Dealership</strong></h3>
                        <hr />
                        <form id="account" method="post" asp-action="Login" asp-controller="Home">
                            <div class="form-group first">
                                <label class="col-md-2" asp-for="Email"></label>
                                <input asp-for="Email" type="text" class="form-control" placeholder="admin@gmail.com" id="username">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group last mb-3">
                                <label class="col-md-2" asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Your Password" id="password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex mb-5 align-items-center">
                                <label asp-for="RememberMe" class="control control--checkbox mb-0">
                                    <span class="caption">Remember me</span>
                                    <input asp-for="RememberMe" type="checkbox" checked="checked" />
                                    <div class="control__indicator"></div>
                                </label>
                                
                            </div>
                            
                            <input type="submit" value="Log In" class="btn btn-block btn-primary">
                            <br />
                            <a asp-controller="Home" asp-action="Register">
                                <input  value="Create new role" class="btn btn-block btn-dark">
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

