@model CarDealership.Models.ViewModels.Register

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

</head>
<body>
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('https://i.pinimg.com/564x/89/a8/36/89a8362ea709ccb3be270db41178bed2.jpg'); "></div>
        <div class="contents order-2 order-md-1">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-10">
                        <h3>Register to <strong>Car Dealership</strong></h3>
                        <hr />
                        <form method="post" asp-action="Register" asp-controller="Home">
                            <div class="form-group last mb-3">
                                <label class="col-md-2" asp-for="Name"></label>
                                <div class="col-md-10">
                                    <input asp-for="Name" class="form-control" placeholder="Mark John" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group last mb-3">
                                <label class="col-md-2" asp-for="Email"></label>
                                <div class="col-md-10">
                                    <input asp-for="Email" type="text" class="form-control" placeholder="admin@gmail.com" id="username">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                 </div>
                            </div>
                            <div class="form-group last mb-3">
                                <label class="col-md-2" asp-for="Password">Password</label>
                                <div class="col-md-10">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Your Password" id="password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                             <div class="form-group last mb-3">
                                    <label class="col-md-2" asp-for="ConfirmPassword"></label>
                                    <div class="col-md-10">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Your Password" id="confirmPassword" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                             </div>

                              <div class="form-group last mb-3">
                                    <label class="col-md-2" asp-for="RoleName"></label>
                                    <div class="col-md-10">
                                        <select asp-for="RoleName" asp-items="@CarDealership.Utility.Helper.GetRolesForDropDown()" class="form-control">
                                            <option hidden disabled selected> Select a role</option>
                                        </select>
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                              </div>

                                <div class="form-group">
                                    <div class="col-md-10 offset-md-0">
                                        <input type="submit" value="Register" class="btn btn-block btn-primary" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-10 offset-md-0">
                                        <input asp-action="Login" type="submit" value="Sign In" class="btn btn-block btn-dark" />
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
</html>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}