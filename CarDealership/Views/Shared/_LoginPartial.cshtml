@inject Microsoft.AspNetCore.Identity.SignInManager<CarDealership.Models.ApplicationUser> signInManager


@if (signInManager.IsSignedIn(User))
{
    <form id="logoutForm" asp-action="Logoff" asp-controller="Home">
        <ul class="nav navbar-nav">
            <li class="text-white btn btn-secondary nav-link">Hello, @User.Identity.Name !</li>
            &nbsp;
            <li><a class="btn btn-danger  text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
       
    </form>

}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            @*@Html.ActionLink("Sign Up", "Register", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })*@
            <a class="nav-link text-black" id="registerLink" asp-controller="Home" asp-action="Register">Register</a>
        </li>
        <li>
            @*@Html.ActionLink("Sign In", "Login", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })*@
            <a class="nav-link text-black" id="loginLink" asp-controller="Home" asp-action="Login">Sign In</a>
        </li>
    </ul>
}

